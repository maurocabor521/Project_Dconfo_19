<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragment.Estudiante.fonico.Tipo2FonicoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ejercicio FÃ³nico Tipo 2"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/txt_resultado"
        android:layout_margin="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_c1_f1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_estudiante_fon2_c1_f1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_no_foto_80dp"
                            android:elevation="@dimen/elevation_ciecleimageprofile" />

                        <TextView
                            android:id="@+id/txt_estudiante_fon2_nom_c1f1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:hint="nombre"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_c1_f2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_estudiante_fon2_c1_f2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_no_foto_80dp"
                            android:elevation="@dimen/elevation_ciecleimageprofile" />

                        <TextView
                            android:id="@+id/txt_estudiante_fon2_nom_c1f2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:hint="nombre"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_c1_f3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_estudiante_fon2_c1_f3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_no_foto_80dp"
                            android:elevation="@dimen/elevation_ciecleimageprofile" />

                        <TextView
                            android:id="@+id/txt_estudiante_fon2_nom_c1f3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:hint="nombre"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_c1_f4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_estudiante_fon2_c1_f4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_no_foto_80dp"
                            android:elevation="@dimen/elevation_ciecleimageprofile" />

                        <TextView
                            android:id="@+id/txt_estudiante_fon2_nom_c1f4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:hint="nombre"
                            android:text="" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/edt_estudiante_fon2_l1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="L1"
                            android:inputType="textCapSentences"
                            android:text=""
                            android:textSize="45dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/edt_estudiante_fon2_l2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="L2"
                            android:text=""
                            android:textSize="45dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_l3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/edt_estudiante_fon2_l3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="L3"
                            android:text=""
                            android:textSize="45dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_estudiante_fon2_l4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/edt_estudiante_fon2_l4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="L4"
                            android:text=""
                            android:textSize="45dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_fonico_t2_estudiante_enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Enviar"
                android:textStyle="bold"
                android:theme="@style/RaisedButtonDark" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>