<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:id="@+id/cv_item_ejercicio">

    <LinearLayout
        android:id="@+id/ll_item_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#f5af19"
        android:orientation="vertical"
        android:padding="5dp"
        android:theme="@style/RaisedButtonOrange">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="ID:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tsize_documento"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_ejercicioId_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:hint="id Ejercicio"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/tsize_documento"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="NOMBRE:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tsize_documento"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_ejercicioNombre_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:hint="Nombre:"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/tsize_documento"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox_item_ejercicio_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Agregar Ejercicio" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>