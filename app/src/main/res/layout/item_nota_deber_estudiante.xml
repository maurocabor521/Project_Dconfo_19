<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/ll_showNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/idDeber"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_IDdeber_notaDeber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="@string/idDeber"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/ID_Estudiante"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_IdEstudiante_notaDeber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="@string/NombreCurso"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/IDEjercicio"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_id_Ejercicio_notaDeber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="@string/IDEjercicio"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/editTextColorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/nota"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_nota_notaDeber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="@string/nota"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/fecha"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_fecha_notaDeber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="@string/fecha"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/imv_show_image"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>