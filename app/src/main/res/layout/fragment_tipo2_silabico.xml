                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginTop="@dimen/edittext_margin_createaccount"
                        android:theme="@style/EditTextBlack">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_docente_sil2_nameEjercicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ingrese nombre Ejercicio">

                        </android.support.design.widget.TextInputEditText>
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checkedButton="@id/rb_letraInicial_sil2"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_letraInicial_sil2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:text="Letra Inicial" />

                            <RadioButton
                                android:id="@+id/rb_letraFinal_sil2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="50dp"
                                android:text="Letra Final" />


                        </RadioGroup>


                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_docente_sil2_enviar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Enviar"
                        android:textStyle="bold"
                        android:theme="@style/RaisedButtonDark" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

