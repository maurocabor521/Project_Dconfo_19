                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_docente_sil2_c2_f1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center|top"
                                android:layout_margin="5dp"
                                android:background="@drawable/ic_no_foto_80dp"
                                android:elevation="@dimen/elevation_ciecleimageprofile" />

                            <TextView
                                android:id="@+id/txt_docente_sil2_nom_c2f1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:hint="nombre"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_docente_sil2_c2_f2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_docente_sil2_c2_f2"
