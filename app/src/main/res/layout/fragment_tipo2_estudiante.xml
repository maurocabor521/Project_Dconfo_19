<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragment.Estudiante.Tipo2EstudianteFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo 2" />

    <LinearLayout

        android:id="@+id/ll_docente_tipo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_estudiante_escuchar_tipo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/recording_96" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tono"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/estudiante_seek_bar_pitch"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:progress="50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Velocidad"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/estudiante_seek_bar_speed"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:progress="50" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_square_30dp" />

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_square_30dp" />

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_square_30dp" />

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_square_30dp" />

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_square_30dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_estudiante_tipo2_enviar_respuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar Respuesta"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:theme="@style/RaisedButtonDark" />
    </LinearLayout>


</LinearLayout>