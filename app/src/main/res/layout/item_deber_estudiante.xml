<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
>

    <LinearLayout
        android:id="@+id/ll_item_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="id Ejercicio"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_deber_idejercicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="id Ejercicio"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Tipo Deber"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_deber_tipodeber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="Tipo Deber"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Tipo Actividad"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_actividad_tipodeber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="Tipo Actividad"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Tipo Asignación"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_asignacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="Tipo Asignación"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tsize_documento"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:id="@+id/iv_item_deber_est"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>