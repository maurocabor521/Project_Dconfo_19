<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragment.Estudiante.silabico.Tipo1silabicoEstudianteFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SilÃ¡bico tipo 1"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/ll_tipo_muestra_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_estudiante_silabico_t1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center|top"
                android:layout_margin="5dp"
                android:background="@drawable/ic_no_foto_80dp"
                android:elevation="@dimen/elevation_ciecleimageprofile" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_silabico_estudiante_tipo1_textToS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/recording_96"
                android:textStyle="bold"
                android:theme="@style/RaisedButtonDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tono"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seek_bar_pitch_silabico_estudiante"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:progress="50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Velocidad"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seek_bar_speed_silabico_estudiante"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:progress="50" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_silabico_estudiante_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_square_30dp" />

                <Button
                    android:id="@+id/btn_silabico_estudiante_b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_square_30dp" />

                <Button
                    android:id="@+id/btn_silabico_estudiante_b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_square_30dp" />

                <Button
                    android:id="@+id/btn_silabico_estudiante_b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_square_30dp" />

                <Button
                    android:id="@+id/btn_silabico_estudiante_b5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_square_30dp" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_silabico_estudiante_bell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/bell_96px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_silabico_estudiante_Responde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responder" />

            <TextView
                android:id="@+id/txt_silabico_estudiante_resultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="RESULTADO" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>