                    android:layout_marginTop="@dimen/edittext_margin_createaccount"
                    android:theme="@style/EditTextBlack">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_dni_Docente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DNI Docente"></android.support.design.widget.TextInputEditText>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edittext_margin_createaccount"
                    android:theme="@style/EditTextBlack">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_correo_Docente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo Docente">

                    </android.support.design.widget.TextInputEditText>

                </android.support.design.widget.TextInputLayout>
