<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragment.administrador.NewEstudianteFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Ingresar Estudiante"
        android:layout_marginTop="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edittext_margin_createaccount"
            android:theme="@style/EditTextBlack">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_nombre_Estudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Estudiante">

            </android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edittext_margin_createaccount"
            android:theme="@style/EditTextBlack">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_apellido_Estudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido Estudiante"></android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edittext_margin_createaccount"
            android:theme="@style/EditTextBlack">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_acudiente_Estudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Acudiante Estudiante"></android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edittext_margin_createaccount"
            android:theme="@style/EditTextBlack">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_correo_acudiente_Estudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo Acudiante Estudiante">

            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edittext_margin_createaccount"
            android:theme="@style/EditTextBlack">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_telefono_acudiente_Estudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono Acudiante Estudiante">

            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>


        <ImageView
            android:id="@+id/imgv_foto_estudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_no_foto_80dp" />

        <Button
            android:id="@+id/btn_new_estudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Crear Estudiante"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:theme="@style/RaisedButtonDark" />
    </LinearLayout>

    </ScrollView>
</LinearLayout>